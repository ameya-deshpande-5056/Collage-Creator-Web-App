{
  "name": "collage-creator-electron",
  "version": "1.0.0",
  "description": "Electron wrapper for Collage Creator Web App",
  "homepage": "https://github.com/ameya-deshpande-5056/Collage-Creator-Web-App",
  "main": "main.js",
  "author": {
    "name": "Ameya Deshpande",
    "email": "adeshpande610@gmail.com"
  },
  "scripts": {
    "start": "electron .",
    "package": "electron-builder --win",
    "package:linux": "electron-builder --linux"
  },
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.0.0"
  },
  "author": "",
  "build": {
    "appId": "com.example.collagecreator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "package.json",
      "../build/web/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "maintainer": "Ameya Deshpande <adeshpande610@gmail.com>",
      "category": "Graphics"
    }
  }
}
